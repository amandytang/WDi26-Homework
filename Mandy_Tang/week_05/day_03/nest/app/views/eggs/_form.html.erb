<%= form_for @egg do |f|  %>

<%= f.label :name, :autofocus => "true", :required => "true" %>
<%= f.text_field :name %>
<%= f.label :pattern %>
<%= f.text_field :pattern %>
<%= f.label :image %>
<%= f.url_field :image %>

<%= f.label :bird_id %>
<%= f.select :bird_id, Bird.pluck(:name, :id), :include_blank => true %>

<%= f.submit %>

<% end %>
